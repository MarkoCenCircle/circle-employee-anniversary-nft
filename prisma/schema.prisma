generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
    id                  Int      @id @default(autoincrement())
    email               String   @unique
    firstName           String
    lastName            String
    position            String?
    employmentStartDate DateTime
    circleWalletId      String   @db.Uuid
}

model Nft {
    id           Int     @id @default(autoincrement())
    tokenAddress String
    tokenId      Int
    imageUrl     String
    title        String?
    description  String?

    @@unique([tokenAddress, tokenId], name: "tokenAddress_tokenId")
}
