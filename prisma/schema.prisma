generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id                  Int      @id @default(autoincrement())
  email               String   @unique
  firstName           String
  lastName            String
  position            String?
  employmentStartDate DateTime
  circleWalletId      String   @db.Uuid
  isVerified          Boolean  @default(true)

  @@index([isVerified], type: Hash)
}

model Nft {
  id                     Int             @id @default(autoincrement())
  tokenAddress           String
  tokenId                Int
  imageUrl               String
  title                  String?
  description            String?
  pendingUserRedemptions UnredeemedNft[]

  @@unique([tokenAddress, tokenId], name: "tokenAddress_tokenId")
}

model UnredeemedNft {
  email      String
  nftId      Int
  nft        Nft       @relation(fields: [nftId], references: [id])
  redeemDate DateTime?

  @@id(name: "unredeemedNftId", [email, nftId])
  @@index([redeemDate], type: Hash)
}
